{%- style -%}
  .header {
    padding: var(--spacing-unit) 0;
    background: var(--color-background);
    position: relative;
    z-index: 100;
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header__logo {
    max-width: 150px;
    color: var(--color-text);
    display: block;
  }

  .header__logo:hover {
    color: var(--color-primary);
  }

  .header__logo-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .header__nav {
    display: flex;
    gap: calc(var(--spacing-unit) * 4);
    align-items: center;
  }

  .header__nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9375rem;
  }

  .header__nav-link:hover {
    color: var(--color-primary);
  }

  .header__cart {
    display: flex;
    align-items: center;
    gap: var(--spacing-unit);
    color: var(--color-text);
    text-decoration: none;
  }

  .header__cart:hover {
    color: var(--color-primary);
  }

  .header__cart-count {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .header__shop-now {
    display: inline-block;
    padding: calc(var(--spacing-unit) * 1.5) calc(var(--spacing-unit) * 2);
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: background-color 0.3s ease;
  }

  .header__shop-now:hover {
    background-color: color-mix(in srgb, var(--color-primary) 80%, black);
  }

  @media screen and (max-width: 768px) {
    .header__nav {
      display: none;
    }
  }
{%- endstyle -%}

<header class="header">
  <div class="container header__container">
    <nav class="header__nav">
      <a href="{{ routes.root_url }}" class="header__nav-link">Shop</a>
      <a href="/pages/about" class="header__nav-link">About Us</a>
      <a href="/pages/how-it-works" class="header__nav-link">How It Works</a>
    </nav>

    <a href="{{ routes.root_url }}" class="header__logo">
      {%- if section.settings.logo != blank -%}
        <img
          src="{{ section.settings.logo | image_url: width: 150 }}"
          alt="{{ shop.name }}"
          width="{{ section.settings.logo.width }}"
          height="{{ section.settings.logo.height }}"
          loading="lazy"
          class="header__logo-image"
        >
      {%- else -%}
        {% render 'icon-logo' %}
      {%- endif -%}
    </a>

    <div class="header__nav">
      <a href="/pages/journal" class="header__nav-link">Journal</a>
      <a href="/pages/faq" class="header__nav-link">FAQ</a>
      <a href="/pages/contact" class="header__nav-link">Contact</a>
      <a href="{{ routes.cart_url }}" class="header__cart">
        {% render 'icon-cart' %}
        <span class="header__cart-count">{{ cart.item_count }}</span>
      </a>
      <a href="/collections/all" class="header__shop-now">Shop Now</a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %} 
{%- style -%}
  .our-story {
    padding: calc(var(--spacing-unit) * 8) 0;
  }

  .our-story__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: calc(var(--spacing-unit) * 8);
    align-items: center;
  }

  .our-story__content {
    max-width: 600px;
  }

  .our-story__heading {
    font-size: 2rem;
    color: var(--color-text);
    margin-bottom: calc(var(--spacing-unit) * 3);
    color: var(--color-primary);
  }

  .our-story__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
    white-space: pre-line;
  }

  .our-story__image-wrapper {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    border-radius: 8px;
  }

  .our-story__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    .our-story__container {
      grid-template-columns: 1fr;
      gap: calc(var(--spacing-unit) * 4);
    }

    .our-story__content {
      max-width: 100%;
    }

    .our-story__heading {
      font-size: 1.75rem;
    }

    .our-story__text {
      font-size: 1rem;
    }
  }
{%- endstyle -%}

<div class="our-story">
  <div class="container">
    <div class="our-story__container">
      <div class="our-story__content">
        <h2 class="our-story__heading">{{ section.settings.heading }}</h2>
        <div class="our-story__text">{{ section.settings.story_text }}</div>
      </div>
      <div class="our-story__image-wrapper">
        {%- if section.settings.image != blank -%}
          <img
            srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
              {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
              {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}"
            src="{{ section.settings.image | image_url: width: 535 }}"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="our-story__image"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'our-story__image placeholder' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Our Story",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It All Started"
    },
    {
      "type": "textarea",
      "id": "story_text",
      "label": "Story Text",
      "default": "NatureBuff was born from a simple observation during a hiking trip in 2018..."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Our Story",
      "category": "Text"
    }
  ]
}
{% endschema %} 
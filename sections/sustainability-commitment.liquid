{%- style -%}
  .sustainability {
    padding: calc(var(--spacing-unit) * 8) 0;
    background-color: white;
  }

  .sustainability__heading {
    font-size: 2rem;
    color: var(--color-text);
    margin-bottom: calc(var(--spacing-unit) * 6);
    text-align: center;
  }

  .sustainability__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: calc(var(--spacing-unit) * 4);
  }

  .sustainability__feature {
    text-align: left;
  }

  .sustainability__icon {
    width: 48px;
    height: 48px;
    margin-bottom: calc(var(--spacing-unit) * 3);
    color: var(--color-primary);
  }

  .sustainability__feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: calc(var(--spacing-unit) * 2);
    color: var(--color-text);
  }

  .sustainability__feature-text {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  @media screen and (max-width: 768px) {
    .sustainability__grid {
      grid-template-columns: 1fr;
      gap: calc(var(--spacing-unit) * 4);
    }

    .sustainability__feature {
      text-align: center;
    }

    .sustainability__icon {
      margin-left: auto;
      margin-right: auto;
    }
  }
{%- endstyle -%}

<div class="sustainability">
  <div class="container">
    <h2 class="sustainability__heading">{{ section.settings.heading }}</h2>
    <div class="sustainability__grid">
      <div class="sustainability__feature">
        {% render 'icon-leaf' %}
        <h3 class="sustainability__feature-title">{{ section.settings.feature_1_title }}</h3>
        <p class="sustainability__feature-text">{{ section.settings.feature_1_text }}</p>
      </div>

      <div class="sustainability__feature">
        {% render 'icon-recycle' %}
        <h3 class="sustainability__feature-title">{{ section.settings.feature_2_title }}</h3>
        <p class="sustainability__feature-text">{{ section.settings.feature_2_text }}</p>
      </div>

      <div class="sustainability__feature">
        {% render 'icon-globe' %}
        <h3 class="sustainability__feature-title">{{ section.settings.feature_3_title }}</h3>
        <p class="sustainability__feature-text">{{ section.settings.feature_3_text }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sustainability",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Sustainability Commitment"
    },
    {
      "type": "text",
      "id": "feature_1_title",
      "label": "Feature 1 Title",
      "default": "Sustainable Materials"
    },
    {
      "type": "textarea",
      "id": "feature_1_text",
      "label": "Feature 1 Text",
      "default": "Our Buff Wipes are made from 100% biodegradable bamboo fiber..."
    },
    {
      "type": "text",
      "id": "feature_2_title",
      "label": "Feature 2 Title",
      "default": "Zero Waste Packaging"
    },
    {
      "type": "textarea",
      "id": "feature_2_text",
      "label": "Feature 2 Text",
      "default": "We've eliminated plastic from our packaging..."
    },
    {
      "type": "text",
      "id": "feature_3_title",
      "label": "Feature 3 Title",
      "default": "Environmental Impact"
    },
    {
      "type": "textarea",
      "id": "feature_3_text",
      "label": "Feature 3 Text",
      "default": "For every purchase, we donate 1% of sales to environmental nonprofits..."
    }
  ],
  "presets": [
    {
      "name": "Sustainability",
      "category": "Text"
    }
  ]
}
{% endschema %} 
{%- style -%}
  .about-hero {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-color: #808080;
    color: white;
    overflow: hidden;
  }

  .about-hero__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 0 var(--spacing-unit);
  }

  .about-hero__title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: calc(var(--spacing-unit) * 2);
  }

  .about-hero__subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .about-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    .about-hero__title {
      font-size: 2.5rem;
    }

    .about-hero__subtitle {
      font-size: 1.125rem;
    }
  }
{%- endstyle -%}

<div class="about-hero">
  <div class="about-hero__overlay"></div>
  <div class="about-hero__content">
    <h1 class="about-hero__title">{{ section.settings.heading }}</h1>
    <p class="about-hero__subtitle">{{ section.settings.subheading }}</p>
  </div>
</div>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "How NatureBuff is changing the world of sustainable hygiene, one product at a time."
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "About Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %} 
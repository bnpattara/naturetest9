{%- style -%}
  .footer {
    padding: calc(var(--spacing-unit) * 8) 0 calc(var(--spacing-unit) * 4);
    background-color: #f5f5f5;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr);
    gap: calc(var(--spacing-unit) * 4);
    margin-bottom: calc(var(--spacing-unit) * 6);
  }

  .footer__brand {
    max-width: 300px;
  }

  .footer__logo {
    max-width: 150px;
    margin-bottom: calc(var(--spacing-unit) * 3);
  }

  .footer__description {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: calc(var(--spacing-unit) * 3);
  }

  .footer__column-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: calc(var(--spacing-unit) * 3);
    color: var(--color-text);
  }

  .footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__menu-item {
    margin-bottom: calc(var(--spacing-unit) * 1.5);
  }

  .footer__menu-link {
    color: #666;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  .footer__menu-link:hover {
    color: var(--color-primary);
  }

  .footer__social {
    display: flex;
    gap: calc(var(--spacing-unit) * 2);
  }

  .footer__social-link {
    color: #666;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__social-link:hover {
    color: var(--color-primary);
  }

  .footer__bottom {
    padding-top: calc(var(--spacing-unit) * 3);
    border-top: 1px solid #ddd;
    text-align: center;
    font-size: 0.875rem;
    color: #666;
  }

  @media screen and (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: calc(var(--spacing-unit) * 4);
    }

    .footer__brand {
      max-width: 100%;
      text-align: center;
    }

    .footer__logo {
      margin: 0 auto calc(var(--spacing-unit) * 3);
    }

    .footer__column-title {
      text-align: center;
    }

    .footer__menu {
      text-align: center;
    }

    .footer__social {
      justify-content: center;
    }
  }
{%- endstyle -%}

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <div class="footer__brand">
        <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="footer__logo">
        <p class="footer__description">Sustainable hygiene products for the wild at heart. Eco-friendly, biodegradable, and perfect for your adventures.</p>
        <div class="footer__social">
          <a href="https://instagram.com" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-instagram' %}
          </a>
          <a href="https://twitter.com" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-twitter' %}
          </a>
          <a href="https://facebook.com" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-facebook' %}
          </a>
        </div>
      </div>

      <div class="footer__column">
        <h3 class="footer__column-title">Shop</h3>
        <ul class="footer__menu">
          <li class="footer__menu-item">
            <a href="/collections/all" class="footer__menu-link">All Products</a>
          </li>
          <li class="footer__menu-item">
            <a href="/products/buff-wipes" class="footer__menu-link">Buff Wipes</a>
          </li>
          <li class="footer__menu-item">
            <a href="/products/soap-bars" class="footer__menu-link">Soap Bars</a>
          </li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__column-title">About</h3>
        <ul class="footer__menu">
          <li class="footer__menu-item">
            <a href="/pages/our-story" class="footer__menu-link">Our Story</a>
          </li>
          <li class="footer__menu-item">
            <a href="/pages/sustainability" class="footer__menu-link">Sustainability</a>
          </li>
          <li class="footer__menu-item">
            <a href="/pages/meet-the-team" class="footer__menu-link">Meet the Team</a>
          </li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__column-title">Resources</h3>
        <ul class="footer__menu">
          <li class="footer__menu-item">
            <a href="/pages/journal" class="footer__menu-link">Journal</a>
          </li>
          <li class="footer__menu-item">
            <a href="/pages/faq" class="footer__menu-link">FAQ</a>
          </li>
          <li class="footer__menu-item">
            <a href="/pages/contact-us" class="footer__menu-link">Contact Us</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="footer__bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} NatureBuff. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Brand Description",
      "default": "Sustainable hygiene products for the wild at heart. Eco-friendly, biodegradable, and perfect for your adventures."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    }
  ]
}
{% endschema %} 
{%- style -%}
.how-it-works-header {
  padding: 60px 0;
  text-align: center;
  background-color: var(--color-background);
}

.how-it-works-header__title {
  margin-bottom: 20px;
  color: var(--color-text);
  font-size: 2.5em;
  font-weight: 600;
}

.how-it-works-header__description {
  max-width: 800px;
  margin: 0 auto;
  color: var(--color-text-secondary);
  font-size: 1.1em;
  line-height: 1.6;
}
{%- endstyle -%}

<div class="how-it-works-header">
  <div class="container">
    <h1 class="how-it-works-header__title">{{ section.settings.title }}</h1>
    <div class="how-it-works-header__description">{{ section.settings.description }}</div>
  </div>
</div>

{% schema %}
{
  "name": "How It Works Header",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "How It Works"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover how NatureBuff products integrate seamlessly into your daily life, adventures, and travels while helping protect the planet."
    }
  ],
  "presets": [
    {
      "name": "How It Works Header",
      "category": "Page Sections"
    }
  ]
}
{% endschema %} 